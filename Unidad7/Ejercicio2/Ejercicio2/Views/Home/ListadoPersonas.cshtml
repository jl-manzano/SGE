@model List<Ejercicio2.Models.DAL.clsPersona>

    @{
    ViewData["Title"] = "Listado de Personas";
    }

    <h2>@ViewData["Title"]</h2>

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Edad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in Model)
            {
            <tr>
                <td>@persona.Id</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellidos</td>
                <td>@persona.Edad</td>
            </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index", "Home")">Volver a la página principal</a>
