@model List<Ejercicio1.Models.Entities.Persona>

    @{
    ViewData["Title"] = "Listado de Personas";
    }

    <h2>@ViewData["Title"]</h2>

    @if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>NOMBRE</th>
                <th>APELLIDOS</th>
                <th>EDAD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in Model)
            {
            <tr>
                <td>@persona.Nombre</td>
                <td>@persona.Apellidos</td>
                <td>@persona.Edad</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay personas en el listado.</p>
}

           <div class="d-flex mt-4">
               @Html.ActionLink("Ver Vista Principal", "Index", "Home", null, new { @class = "btn btn-primary me-2" })
               @Html.ActionLink("Ver datos de la persona con ID 3", "DatosPersona", "Home", null, new { @class = "btn btn-success me-2" })
           </div>